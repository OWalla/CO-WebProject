@model IEnumerable<BookStore.Models.Book>

@{
    ViewBag.Title = "Book Search";
}

<h2>@ViewBag.Title</h2>
@using (Ajax.BeginForm("ListAJAX", "Book", new AjaxOptions() { UpdateTargetId = "books-list-section" }))
{
    <p>
        Name:   @Html.TextBox("Name", String.Empty, new object { })
        Author: @Html.TextBox("author", string.Empty, new { })
        After Year: @Html.TextBox("afteryear", string.Empty, new { type = "number" })
        <input type="button" value="Filter" onclick="$(this.form).submit();" />
    </p>
}

<hr />

<section id="books-list-section">
    @Html.Partial("BookList")
</section>

@section scripts {   
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
}
